---
import StarlightPage from '@astrojs/starlight/components/StarlightPage.astro';
---

<StarlightPage
  frontmatter={{
    title: 'My custom page',
    tableOfContents: false,
    pagefind: false,
    hero: {
      title: '',
    },
  }}
  hasSidebar={false}
>
  <div class="homepage tw-w-full tw-flex tw-flex-col tw-items-center">
    {/* Intro */}
    <div class="tw-w-full ">
      <div
        class="tw-flex tw-flex-col tw-items-center tw-w-full tw-px-30 tw-pt-70 tw-pb-[482px] tw-bg-100 tw-bg-homepage-1 tw-bg-no-repeat tw-bg-center"
      >
        <h1
          class={'tw-text-54 tw-font-800 tw-max-w-[954px] tw-text-center tw-break-normal tw-break-keep'}
        >
          home.main.title
        </h1>
        <p
          class={'tw-text-26 tw-font-400 tw-mt-20 tw-text-center tw-max-w-[584px] tw-break-keep'}
        >
            home.main.description
        </p>
        <button
          class="tw-text-26 tw-font-700 tw-py-8 tw-px-24 tw-bg-blue-300 tw-text-white tw-rounded-8 tw-mt-50 hover:tw-text-white hover:tw-no-underline tw-cursor-default"
        >
            home.main.start
        </button>
      </div>
    </div>
    {/* Edybara */}
    <div
      class="tw-bg-white tw-w-full tw-flex tw-items-center tw-flex-col tw-relative"
    >
      <div
        class={'tw-flex tw-flex-1 tw-px-20 tw-w-full tw-absolute tw-rounded-8 tw-h-[600px] tw-max-w-[994px] tw-top-[-420px]'}
      >
        <!-- <BrowserOnly>
          {
            () => {
              const {
                Maximum,
              } = require('@site/src/components/examples/getting-started/maximum');
              return (
                <Maximum
                  class={'tw-rounded-8 tw-h-[600px] tw-shadow-black'}
                />
              );
            }
          }
        </BrowserOnly> -->
      </div>
    </div>
    <div
      class={'tw-flex tw-flex-col tw-items-center tw-bg-blue-500 tw-w-full tw-px-20 tw-pb-100 tw-pt-250'}
    >
      <h2
        class="tw-text-44 tw-font-800 tw-text-white tw-text-center tw-break-keep"
      >
          home.whatIs.title
      </h2>
      <p
        class="tw-mt-18 tw-text-22 tw-max-w-[706px] tw-text-white tw-text-center tw-break-keep"
      >
        home.whatIs.description
      </p>
      <div
        class="tw-grid md:tw-grid-rows-2 tw-grid-cols-1 md:tw-grid-cols-none md:tw-grid-flow-col tw-gap-20 tw-max-w-[954px] tw-w-full tw-mt-100"
      >
        <div
          class="md:tw-row-span-2 tw-flex tw-flex-col tw-justify-center tw-rounded-20 tw-bg-blue-100"
        >
          <img
            class="tw-w-full md:tw-object-cover tw-max-h-[180px] md:tw-max-h-none tw-flex-1"
            src="img/ilusts/folder.svg"
          />
          <div class="tw-p-20 tw-flex tw-flex-col">
            <h3 class="tw-text-22 tw-font-700">
              home.whatIs.card.basedOn.title
            </h3>
            <p class="tw-mt-14 tw-text-16">
              home.whatIs.card.basedOn.description
            </p>
          </div>
        </div>
        <div
          class="md:tw-col-span-2 tw-flex tw-flex-col tw-justify-center tw-rounded-20 tw-bg-purple-100"
        >
          <img
            class="tw-w-full tw-max-h-[180px] md:tw-max-h-[250px] tw-px-20 tw-pt-20"
            src="img/ilusts/rocket.svg"
          />
          <div class="tw-p-20 tw-flex tw-flex-col">
            <h3 class="tw-text-22 tw-font-700">
              home.whatIs.card.easyToStart.title
            </h3>
            <p class="tw-mt-14 tw-text-16">
              home.whatIs.card.easyToStart.description
            </p>
          </div>
        </div>
        <div
          class="md:tw-col-span-2 tw-flex tw-flex-col tw-justify-center tw-rounded-20 tw-bg-purple-200"
        >
          <img
            class="tw-w-full tw-max-h-[180px] md:tw-max-h-[250px] tw-px-20 tw-pt-20"
            src="img/ilusts/book.svg"
          />
          <div class="tw-p-20 tw-flex tw-flex-col">
            <h3 class="tw-text-22 tw-font-700">
              home.whatIs.card.experience.title
            </h3>
            <p class="tw-mt-14 tw-text-16">
              home.whatIs.card.experience.description
            </p>
          </div>
        </div>
      </div>
    </div>
    {/* Relationship */}
    <div
      class="tw-flex tw-flex-col tw-items-center tw-w-full tw-bg-blue-100 tw-py-100 tw-px-25"
    >
      <h1
        class="tw-text-44 tw-font-800 tw-max-w-400 tw-text-center tw-break-keep"
      >
        home.quill.title
      </h1>
      <div
        class="tw-grid tw-grid-rows-1 tw-grid-cols-1 md:tw-grid-flow-col md:tw-grid-cols-none tw-mt-60 tw-gap-20 tw-max-w-[954px] tw-w-full"
      >
        <div class="md:tw-col-span-2 tw-bg-white tw-rounded-20 tw-p-20">
          <img
            class="tw-w-full tw-max-h-[180px] tw-px-20 tw-pt-20"
            src="img/ilusts/document.svg"
          />
          <div class="tw-flex tw-flex-col tw-mt-20">
            <h3 class="tw-text-22 tw-font-700">
              home.quill.card.migrate.title
            </h3>
            <p class="tw-mt-14">
              home.quill.card.migrate.description
            </p>
          </div>
        </div>
        <div class="tw-bg-white tw-rounded-20 tw-p-20">
          <img
            class="tw-w-full tw-max-h-[180px] tw-px-20 tw-pt-20"
            src="img/ilusts/preferences.svg"
          />
          <div class="tw-flex tw-flex-col tw-mt-20">
            <h3 class="tw-text-22 tw-font-700">
              home.quill.card.api.title
            </h3>
            <p class="tw-mt-14">
              home.quill.card.api.description
            </p>
          </div>
        </div>
      </div>
    </div>
    {/* Recommend */}
    <div
      class="tw-bg-white tw-w-full tw-flex tw-flex-col tw-items-center tw-py-100 tw-px-25"
    >
      <h1
        class="tw-text-44 tw-font-800 tw-max-w-400 tw-text-center tw-break-keep"
      >
        home.recommend.title
      </h1>
      <div
        class="tw-grid md:tw-grid-rows-3 tw-grid-cols-1 md:tw-grid-cols-none md:tw-grid-flow-col tw-mt-40 tw-gap-20 tw-max-w-[954px] tw-w-full"
      >
        <div
          class="md:tw-col-span-3 tw-flex tw-flex-col md:tw-flex-row-reverse tw-justify-center tw-bg-blue-200 tw-rounded-20"
        >
          <img
            class="tw-w-full tw-max-h-[180px] md:tw-max-h-[260px] md:tw-self-end tw-px-20 tw-pt-20 md:tw-px-0"
            src="img/ilusts/bag.svg"
          />
          <div class="tw-flex tw-flex-col tw-p-20">
            <h3 class="tw-text-22 tw-font-700">
              home.recommend.card.business.title
            </h3>
            <p class="tw-mt-14">
              home.recommend.card.business.description
            </p>
          </div>
        </div>
        <div
          class="md:tw-col-span-2 md:tw-row-span-2 tw-flex tw-flex-col tw-justify-center tw-bg-blue-200 tw-rounded-20 tw-p-20"
        >
          <img
            class="tw-w-full tw-max-h-[180px] md:tw-max-h-none md:tw-flex-1"
            src="img/ilusts/developer.svg"
          />
          <div class="tw-flex tw-flex-col tw-mt-20">
            <h3 class="tw-text-22 tw-font-700">
              home.recommend.card.editor.title
            </h3>
            <p class="tw-mt-14">
              home.recommend.card.editor.description
            </p>
          </div>
        </div>
        <div
          class="md:tw-row-span-2 tw-flex tw-flex-col tw-justify-center tw-bg-blue-200 tw-rounded-20 tw-p-20"
        >
          <img
            class="tw-w-full tw-max-h-[180px] md:tw-max-h-none md:tw-flex-1"
            src="img/ilusts/edybara.svg"
          />
          <div class="tw-flex tw-flex-col tw-mt-20">
            <h3 class="tw-text-22 tw-font-700">
              home.recommend.card.ready.title
            </h3>
            <p class="tw-mt-14">
              home.recommend.card.ready.description
            </p>
          </div>
        </div>
      </div>
    </div>
    <div
      class="tw-bg-blue-500 tw-w-full tw-flex tw-flex-col tw-items-center tw-py-100 tw-px-20 tw-bg-homepage-2 tw-bg-no-repeat tw-bg-center tw-bg-contain"
    >
      <h1
        class="tw-text-38 tw-font-800 tw-text-white tw-text-center tw-break-keep"
      >
        home.try.title
      </h1>
      <button
        class="tw-bg-white tw-text-blue-300 tw-py-8 tw-px-14 tw-rounded-8 tw-text-20 tw-font-600 tw-mt-40 hover:tw-text-blue-300 hover:tw-no-underline tw-cursor-default"
      >
        home.try.start
      </button>
    </div>
  </div>
</StarlightPage>
